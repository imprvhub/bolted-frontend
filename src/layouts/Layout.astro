---
import AppWrapper from '../components/AppWrapper';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Bolted - Professional URL Shortener" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/assets/logos/logo192.png" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <AppWrapper client:load>
      <slot />
    </AppWrapper>
  </body>
</html>